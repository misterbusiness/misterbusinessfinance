<!--Div that will hold the pie chart-->
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
  function selectChartTab(chartName){
      $("#"+chartName).click();
  }
</script>

<%= render 'lancamentos/scripts/build_receita_chart' %>
<div id="ChartsCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#ChartsCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#ChartsCarousel" data-slide-to="1"></li>
    <li data-target="#ChartsCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
      <a href="#reportsModal" role="button" class="btn" data-toggle="modal" onclick="selectChartTab('reportsReceita')">
        <div id="receita_chart_div"></div>
      </a>
    </div>
    <div class="item">
      <a href="#reportsModal" role="button" class="btn" data-toggle="modal" onclick="selectChartTab('reportsDespesa')">
        <div id="despesa_chart_div"></div>
      </a>
    </div>
    <div class="item">
      <a href="#reportsModal" role="button" class="btn" data-toggle="modal" onclick="selectChartTab('reportsCaixa')">
        <div id="caixa_chart_div"></div>
      </a>
    </div>
    <div class="item">
      <a href="#reportsModal" role="button" class="btn" data-toggle="modal" onclick="selectChartTab('reportsDiversos')">
        <div style="width:400px; height:300px; vertical-align: center">
            <center>Relat√≥rios Mister Business</center>
        </div>
      </a>
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#ChartsCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#ChartsCarousel" data-slide="next">&rsaquo;</a>
</div>

