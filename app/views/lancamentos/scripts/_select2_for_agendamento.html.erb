<script type="text/javascript">
	
		$(document).ready(function() {

            var freqAgendamentos = $("#frequencia_agendamentos");
            freqAgendamentos.select2({
				width: "resolve",
				height: "resolve",
				maximumSelectionSize: 1,
                data: [{id:'Semanal', text:'Semanal'}, {id:'Mensal', text:'Mensal'}, {id:'Semestral', text:'Semestral'},
                    {id:'Anual',text:'Anual'}]
			});

            freqAgendamentos.on("open", function () {
                if (freqAgendamentos.val() != "") {
                    freqAgendamentos.val("").trigger("change");
                    freqAgendamentos.select2("open");
                }
            });

            freqAgendamentos.val('Mensal').trigger("change");

		});
</script>
