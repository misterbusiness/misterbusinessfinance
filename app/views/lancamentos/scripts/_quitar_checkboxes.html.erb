<script type="text/javascript">
	$(document).ready(function(){		
		$("#quitar_button").click(function(){
			$('.check_lancamentos').each(function(index, element)
			{
                var jqxhr;
				if ($(element).is(':checked'))
				{
					//alert("/lancamentos/"+ $(element).val()+"/quitar");
                    jqxhr = $.ajax({
						url: "/lancamentos/quitar",
						type: "POST",
						data:{
							_method: 'PUT',
							id: $(element).val()
						}

					})
					.success(function(response){
						//alert("Sucesso!");
					})
					.error(function(jqXHR, textStatus, errorThrown){
						if (errorThrown != "")
						{
							alert("Erro: " + textStatus + ": "+ errorThrown)
						}
						//alert("Erro!" + errMessage);
					})
					.complete(function(){
						//alert("Complete!!")
					})
				}
			});
			location.reload();
		});
													
	});
</script>
