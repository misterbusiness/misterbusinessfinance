<script type="text/javascript">
	$(document).ready(function(){		
		$("#quitar_button").click(function(){
			$(':checkbox[name=lancamento_ids]').each(function(index, element)
			{				
				if ($(element).is(':checked'))
				{				
					//alert("/lancamentos/"+ $(element).val()+"/quitar");
					var jqxhr = $.ajax({
						url: "/lancamentos/"+ $(element).val()+"/quitar",
						type: "POST",
						data:{
							_method: 'PUT',
							id: $(element).val()
						}
						
					})
					.success(function(response){
						//alert("Sucesso!");						
					})
					.error(function(jqXHR, textStatus, errorThrown){
						if (errorThrown != "")
						{
							alert("Erro: " + textStatus + ": "+ errorThrown)
						}
						//alert("Erro!" + errMessage);
					})
					.complete(function(){
						//alert("Complete!!")
					})
				}
			});
			location.reload();
		});
													
	});
</script>
